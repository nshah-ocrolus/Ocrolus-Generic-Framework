# --- Application Settings ---
PORT=4000
NODE_ENV=development

# --- Mock Mode ---
USE_MOCK=true

# --- MeridianLink OAuth Credentials (required for live API) ---
ML_CLIENT_ID=your_client_id
ML_CLIENT_SECRET=your_client_secret
ML_OAUTH_URL=https://playrunner.mortgage.meridianlink.com/oauth/token

# --- MeridianLink Generic Framework Domain ---
ML_BASE_DOMAIN=https://playrunner.mortgage.meridianlink.com

# --- MeridianLink Legacy Credentials (optional) ---
ML_BASE_URL=https://your-instance.meridianlink.com
ML_USERNAME=your_api_username
ML_PASSWORD=your_api_password

# --- Processing Settings ---
PROCESSING_DELAY_MS=2000

# --- Vendor Branding (shown in pop-up header) ---
VENDOR_NAME=Ocrolus

# --- Public URL (for Generic Framework PopupURL) ---
PUBLIC_URL=http://localhost:4000
